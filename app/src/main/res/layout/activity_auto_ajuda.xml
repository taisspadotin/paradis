<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AutoAjuda"
    android:background="@drawable/fundo02"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-Ajuda"
        android:textColor="#98ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="116dp"
        android:textSize="30dp"
        android:fontFamily="cursive"/>

    <TextView
        android:id="@+id/sp1"
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:text="\n"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="223dp" />

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#90DCDCDC"
            android:text="'Tudo o que um sonho precisa para ser realizado é alguém que acredite que ele possa ser realizado'\n\n"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentStart="true"
            android:text="-Roberto Shinyashiki"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <Button
            android:id="@+id/fva1"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/e1"
            android:paddingRight="1px" />

    </RelativeLayout>
    <TextView
        android:id="@+id/sp2"
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:text="\n"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="223dp" />
    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#90DCDCDC"
            android:textColor="#000000"
            android:text="'Acredite que você pode, assim você já está no meio do caminho.'\n\n"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="-Theodore Roosevelt"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <Button
            android:id="@+id/fva2"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/e1"
            android:paddingRight="1px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sp3"
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:text="\n"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="223dp" />

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#90DCDCDC"
            android:textColor="#000000"
            android:text="'O importante não é vencer todos os dias, mas lutar sempre.'\n\n"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="-Waldemar Valle Martins"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <Button
            android:id="@+id/fva3"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/e1"
            android:paddingRight="1px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/sp4"
        android:layout_width="wrap_content"
        android:layout_height="20px"
        android:text="\n"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="223dp" />

    <RelativeLayout
        android:layout_width="375dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#90DCDCDC"
            android:textColor="#000000"
            android:text="'Maior que a tristeza de não haver vencido é a vergonha de não ter lutado!'\n\n"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="-Rui Barbosa"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="223dp" />

        <Button
            android:id="@+id/fva4"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/e1"
            android:paddingRight="1px" />
    </RelativeLayout>



</LinearLayout>